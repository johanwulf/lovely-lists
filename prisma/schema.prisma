// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model List {
  id       Int        @id @default(autoincrement())
  name     String
  ListItem ListItem[]
}

model Item {
  id       Int        @id @default(autoincrement())
  name     String
  ListItem ListItem[]
}

model ListItem {
  id      Int  @id @default(autoincrement())
  list_id List @relation(fields: [listId], references: [id])
  listId  Int
  item_id Item @relation(fields: [itemId], references: [id])
  itemId  Int
  completed Boolean
}
